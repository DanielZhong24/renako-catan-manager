{
  "manifest_version": 3,
  "name": "Colonist Game Logger",
  "version": "1.0",
  "permissions": ["storage", "notifications"],
  "action":{
    "default_popup":"popup.html",
    "default_icons": {
      "16": "icons/disconnected.png",
      "32": "icons/disconnected.png",
      "48": "icons/disconnected.png",
      "128": "icons/disconnected.png"
    }
  },
  "host_permissions": [
    "http://localhost:3000/*",
    "http://localhost/*",
    "https://renako.ootduck.com/*"
  ],
  "externally_connectable": {
    "matches": ["http://localhost/*", "http://localhost:3000/*","https://renako.ootduck.com/*"]
  },
  "content_scripts": [
    {
      "matches": ["https://colonist.io/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}